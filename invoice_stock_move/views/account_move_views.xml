<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account move view form inherit-->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.invoice.stock.move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_stock_move" string="Receipt"
                        type="object" class="oe_highlight"
                        invisible="state != 'posted' or picking_count > 0 or move_type != 'in_invoice' or is_receipt != True"
                        groups="base.group_system"
                        confirm="Are you sure you want to create a Receipt?"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_view_picking"
                        class="oe_stat_button"
                        invisible="picking_count &lt; 1 or state == 'draft'"
                        icon="fa-truck">
                    <field name="picking_count" string="Receipt"
                           widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="picking_type_id" invisible="1"/>
                <field name="invoice_picking_id" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='journal_div']" position="after" >
                <field name="is_receipt" invisible="move_type != 'in_invoice'" groups="base.group_system"/>
            </xpath>
        </field>
    </record>
</odoo>
