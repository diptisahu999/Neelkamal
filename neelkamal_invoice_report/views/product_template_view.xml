<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_form_inherit_hsn" model="ir.ui.view">
        <field name="name">product.template.inherit.hsn</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="l10n_in_hsn_code"/>

            </xpath>
        </field>
    </record>



    <record id="view_company_form_inherit_custom_tab" model="ir.ui.view">
        <field name="name">res.company.form.inherit.custom.tab</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Custom Info">
                    <group>
                        <field name="x_pan_no"/>
                        <field name="x_msme_no"/>
<!--                        <field name="custom_qr_code"/>-->
                    </group>
                </page>
            </xpath>
        </field>
    </record>


 <record id="view_move_form_inherit_custom_fields" model="ir.ui.view">
    <field name="name">account.move.form.inherit.custom.fields</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

        <!-- Bank Details ko LEFT side me add karein -->
        <xpath expr="//field[@name='partner_id']" position="after">
            <group string="Bank Details">
                <field name="x_bank_details"/>
                <field name="x_account_no"/>
                <field name="x_ifsc_code"/>
            </group>
        </xpath>

        <!-- Transport Info ko RIGHT side, Invoice Date wale group ke andar add karein -->
        <xpath expr="//group[field[@name='invoice_date']]" position="inside">
            <group string="Transport &amp; Challan Info" col="2">
                <field name="x_challan_no"/>
                <field name="x_challan_date"/>
                <field name="x_eway_bill_no"/>
                <field name="x_vehicle_no"/>
                <field name="x_transport_name"/>
                <field name="x_lr_no"/>
                <field name="received_by"/>
                <field name="prepared_by"/>


            </group>
        </xpath>

        <!-- Notebook me custom tabs (yeh code waise hi rahega) -->
        <xpath expr="//notebook" position="inside">
            <!-- Aapke saare <page> elements yahan aayenge -->
            <page string="e-Invoice Info">
                <group>
                    <field name="x_irn_no"/>
                    <field name="x_ack_no"/>
                    <field name="x_ack_date"/>
                </group>
            </page>
            <!-- Baaki ke pages... -->
        </xpath>

    </field>
</record>



</odoo>
