<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_company_wizard_form" model="ir.ui.view">
        <field name="name">res_company_wizard_form</field>
        <field name="model">res.company.wizard</field>
        <field name="arch" type="xml">
            <form string="Fetch Now">
                <group>
                    <group>
                        <field name="start_datetime" required="1"/>
                    </group>
                    <group>
                        <field name="end_datetime" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Submit" name="get_manual_response" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="res_company_wizard_action" model="ir.actions.act_window">
        <field name="name">Fetch Now</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.company.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>



</odoo>
